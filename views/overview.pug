                a.nav-link(data-toggle='tab' href='#tab-2' role='tab' aria-controls='tab-2' aria-selected='false') MOVIES
              li.nav-item
                a.nav-link(data-toggle='tab' href='#tab-3' role='tab' aria-controls='tab-3' aria-selected='false') TV SERIES
              li.nav-item
                a.nav-link(data-toggle='tab' href='#tab-4' role='tab' aria-controls='tab-4' aria-selected='false') CARTOONS
            // end content tabs nav
            // content mobile tabs nav
            #content__mobile-tabs.content__mobile-tabs
